@model InventoryManagement.Web.ViewModels.ConfirmEmailViewModel

@{
    ViewData["Title"] = "Confirm Email";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header text-center bg-warning text-dark">
                <h3 class="mb-0">Confirm Your Email</h3>
            </div>
            <div class="card-body p-4">
                <p class="text-center">A verification code has been sent to **@Model.Email**.</p>
                <form asp-controller="Auth" asp-action="ConfirmEmail" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="UserId" />

                    <div class="form-group mb-3">
                        <label asp-for="Code" class="form-label">Verification Code</label>
                        <input asp-for="Code" class="form-control" />
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">Confirm</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>